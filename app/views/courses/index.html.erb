<% title "All Courses" %>

<h3>Courses</h3>
<% if current_user && current_user.has_role?(:admin) %>
  <%= link_to 'Add a new course', new_course_path, :class => 'btn' %>
<% end %>
<div>
<%= will_paginate @courses %>
<table class="table table-condensed">
    <thead>
      <tr>
          <th>Number</th>
          <th>Title</th>
          <th>Instructor</th>
          <th>Status</th>
          <th>Available Seats</th>
          <th>Last Updated</th>
          <th>Notification</th>
          <th></th>
          <th></th>
      </tr>
  </thead>
  <tbody>
  <% @courses.each do |course| %>
    <%= render course %>
  <% end %>
  </tbody>
</table>
<%= will_paginate @courses %>
</div>